<div class="container p-4" >
   <div class="row">
     <!--Va a recorrer los enlaces con #each y mostrar en la vista-->
     {{#each links}} 
       <div class="col-md-3"> 
           <div class="card tex-center">
               <div class="car body">
                   <a href="{{url}}" target="blank">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                   </a> 
                   <p class="m-2">{{description}}</p>  
                   <p>{{timeago created_at}}</p>
                   <a href="/links/delete/{{id}}" class="btn btn-danger">Delete link</a> 
                   <a href="/links/edit/{{id}}" class="btn btn-primary">Edit</a>
               </div>
           </div>
       </div> 
       {{else}} 
         <div class="col-md-4 mx-auto">
           <div class="card card-body text-center">
              <p> There are not links yet.</p> 
              <a href="/links/add">Create one</a>
           </div>
         </div>
     {{/each}} 
   </div>
</div>